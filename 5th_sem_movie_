   ],
   "source": [
    "a = input(\"Enter a name of the movie u want to see the prediction \")\n",
    "a"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 21,
   "metadata": {},
   "outputs": [],
   "source": [
    "relation = movie.corrwith(movie[a])\n",
    "recommend = pd.DataFrame(relation , columns = ['Correlation'])\n",
    "recommend.dropna(inplace = True)\n",
    "recommend.sort_values('Correlation',ascending=False)\n",
